/* This program will collect 10 numbers and calculate the average*/
#include<stdio.h>




	int main (void)
{
	//Local Declarations
	int n=10;
	double sum=0;
	float ave;
	int ary[10];
	
	//Statements
	
	printf("Please enter 10 numbers \n\n ");
	
	for (int i=0; i<n; i++)
	{
	sum = ary[10];
	
	
	printf("Enter number %d:  ", i+1);
	scanf("%2d", &ary[10]);
	
	
	} //for

	/*====average====*/
	ave = sum / n;
	printf(" \n\nYour average is: %f ", ave );
	
	
	return ave;
	}// average
	
